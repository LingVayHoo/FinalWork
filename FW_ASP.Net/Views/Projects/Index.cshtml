@using AuthServer.Models.Content.Projects
@model IEnumerable<FWProject>
@{
    ViewData["Title"] = "Projects";
    Layout = "_Layout";
}
@if (Model.Count() > 0)
{
    <!-- Projects-->
    <section class="projects-section bg-dark">
        
            <div class="container px-4 px-lg-5">
                <!-- Featured Project Row-->
                <div class="row gx-0 mb-4 mb-lg-5 align-items-center">
                <div class="col-xl-8 col-lg-7"><img class="img-fluid mb-3 mb-lg-0" img src='https://localhost:7195/api/FWProjects/DownloadFile/@Model.ElementAt(0).ImgName' alt="..." /></div>
                    <div class="col-xl-4 col-lg-5">
                    <div class="text-white-50 featured-text text-center text-lg-left">
                            <h4>@Model.ElementAt(0).Title</h4>
                            <p class="text-white-50 mb-0">@Model.ElementAt(0).Description</p>
                        </div>
                    </div>
                </div>
                @if (Model.Count() > 1)
                {
                @for (int i = 1; i < Model.Count(); i++)
                {
                    @if (i % 2 != 0)
                    {
                        <!-- Project One Row-->
                        <div class="row gx-0 mb-5 mb-lg-0 justify-content-center">
                            <div class="col-lg-6"><img class="img-fluid" img src="https://localhost:7195/api/FWProjects/DownloadFile/@Model.ElementAt(i).ImgName" alt="..." /></div>
                            <div class="col-lg-6">
                                <div class="bg-black text-center h-100 project">
                                    <div class="d-flex h-100">
                                        <div class="project-text w-100 my-auto text-center text-lg-left">
                                            <h4 class="text-white">@Model.ElementAt(i).Title</h4>
                                            <p class="mb-0 text-white-50">@Model.ElementAt(i).Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    if (i % 2 == 0)
                    {
                        <!-- Project Two Row-->
                        <div class="row gx-0 justify-content-center">
                            <div class="col-lg-6"><img class="img-fluid" img src="https://localhost:7195/api/FWProjects/DownloadFile/@Model.ElementAt(i).ImgName" alt="..." /></div>
                            <div class="col-lg-6 order-lg-first">
                                <div class="bg-black text-center h-100 project">
                                    <div class="d-flex h-100">
                                        <div class="project-text w-100 my-auto text-center text-lg-right">
                                            <h4 class="text-white">@Model.ElementAt(i).Title</h4>
                                            <p class="mb-0 text-white-50">@Model.ElementAt(i).Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            </div>       
        
    </section>
}



