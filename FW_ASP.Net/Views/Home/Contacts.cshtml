@model FW_ASP.Net.Models.ContactsPageModel
@{
    ViewData["Title"] = "Contacts";
    Layout = "_Layout";
}

<!-- Contact-->

<section class="contact-section bg" style="background-image: url('/lib/img/bg-masthead-new.jpg'); width: 100%; height: 100vh; background-repeat: no-repeat; background-size: cover;">
    <div class="container px-4 px-lg-5 d-flex h-50 align-items-center justify-content-center">
        <div class="d-flex justify-content-center">
            <div class="text-center">
                <h1 class="mx-auto my-0 text-light text-uppercase">@Model.Title.MainTitle</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">@Model.Title.QuoteTitle</h2>
            </div>
        </div>
    </div>
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5">
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card py-4 h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                        <h4 class="text-uppercase m-0">Адрес</h4>
                        <hr class="my-4 mx-auto" />
                        <div class="small text-black-50">@Model.Contacts.Address</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card py-4 h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-envelope text-primary mb-2"></i>
                        <h4 class="text-uppercase m-0">Email</h4>
                        <hr class="my-4 mx-auto" />
                        <div class="small text-black-50"><a href="#!">@Model.Contacts.Email</a></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card py-4 h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-mobile-alt text-primary mb-2"></i>
                        <h4 class="text-uppercase m-0">Телефон</h4>
                        <hr class="my-4 mx-auto" />
                        <div class="small text-black-50">@Model.Contacts.Phone</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>